{
  "name": "wanserver",
  "version": "1.0.0",
  "description": "this is a startup with koajs and mongodb , which can manage multiple frontend apps",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/mocha/bin/mocha  --require babel-core/register --reporter mochawesome --watch  --env  'dev'",
    "dev": " concurrently \"npm run client-server\"   \"npm run backend-dev\"",
    "start": "npm run build-client && npm run backend",
    "backend-dev": "nodemon --experimental-modules  --loader  ./custom-loader.mjs  ./src/server/index.js --en 'dev'",
    "backend": "nodemon --experimental-modules  --loader  ./custom-loader.mjs  ./src/server/index.js --en 'production'",
    "build-client": "webpack --mode production",
    "client-server": "webpack-dev-server --open --hot --mode development"
  },
  "keywords": [
    "koajs",
    "api",
    "mongodb",
    "framework",
    "startup"
  ],
  "author": "simontaosim",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^1.3.1",
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "classnames": "^2.2.6",
    "consolidate": "^0.15.1",
    "ejs": "^2.6.1",
    "ejs-lint": "^0.3.0",
    "esm": "^3.0.65",
    "file-loader": "^1.1.11",
    "global": "^4.3.2",
    "gun": "^0.9.9993",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "lodash": "^4.17.10",
    "minimist": "^1.2.0",
    "moment": "^2.22.2",
    "mongoose": "^5.1.6",
    "pouchdb": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "redux": "^4.0.0",
    "request": "^2.87.0",
    "tenpay": "^2.1.6",
    "urlencode": "^1.1.0",
    "webpack-command": "^0.4.0"
  },
  "devDependencies": {
    "@material-ui/icons": "^1.1.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.3.1",
    "koa-webpack": "^5.0.2",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.2",
    "nodemon": "^1.17.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "redux-thunk": "^2.3.0",
    "supertest": "^3.1.0",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
